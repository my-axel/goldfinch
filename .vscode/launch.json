        {
            "name": "Frontend Dev",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["run", "dev"],
            "env": {
                "NODE_ENV": "development"
            },
            "serverReadyAction": {
                "pattern": "- Local:.+(https?://\\S+)",
                "uriFormat": "%s",
                "action": "debugWithChrome"
            },
            "console": "integratedTerminal",
            "resolveSourceMapLocations": [
                "${workspaceFolder}/**",
                "!**/node_modules/**"
            ]
        },
        {
            "name": "Frontend Prod",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "npm",
            "preLaunchTask": "npm: build",
            "runtimeArgs": ["run", "start"],
            "env": {
                "NODE_ENV": "production"
            },
        }
    ]
} 